<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
	http://www.springframework.org/schema/mvc
	http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">

    <mvc:annotation-driven/>

    <bean id="springMvcExceptionHandler" class="com.alibaba.dubbo.rpc.protocol.springmvc.exception.SpringMvcExceptionHandler"/>
    <bean id="springMvcOAuth2Interceptor" class="com.alibaba.dubbo.rpc.protocol.springmvc.oauth2.SpringMvcOAuth2Interceptor"/>

    <!--OAuth2 拦截器-->
    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <ref bean="springMvcOAuth2Interceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>
</beans>
